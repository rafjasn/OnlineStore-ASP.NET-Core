@model  Shop.Models.Order
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>


>
    <h3 class="text-center">Complete your order</h3>

    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
       <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="LastName" class=" control-label"></label>
            <div >
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class=" control-label"></label>
            <div >
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Addres1" class="control-label"></label>
            <div >
                <input asp-for="Addres1" class="form-control" />
                <span asp-validation-for="Addres1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Addres2" class=" control-label"></label>
            <div >
                <input asp-for="Addres2" class="form-control" />
                <span asp-validation-for="Addres2" class="text-danger"></span>
            </div>
        </div>




        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <div>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class=" control-label"></label>
            <div >
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-success" type="submit" value="Complete order" />
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>

    </form>
</div>